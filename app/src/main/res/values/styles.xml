<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Capture Button Style -->
    <style name="CaptureButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/capture_button_background</item>
        <item name="android:elevation">4dp</item>
    </style>

    <style name="CancelButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/cancel_button_background</item>
        <item name="android:elevation">4dp</item>
    </style>

    <style name="GrayCancelButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/gray_cancel_button_bg</item>
        <item name="android:elevation">4dp</item>
    </style>

    <style name="ConfirmButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/confirm_button_background</item>
        <item name="android:elevation">4dp</item>
    </style>

    <style name="BlackConfirmButton" parent="Widget.AppCompat.Button">
            <item name="android:background">@drawable/light_gray_confirm_button_background</item>
            <item name="android:elevation">4dp</item>
    </style>

    <style name="BackButton" parent="Widget.AppCompat.Button">
                <item name="android:background">@drawable/back_arrow</item>
                <item name="android:elevation">4dp</item>
    </style>

    <style name="NextButton" parent="Widget.AppCompat.Button">
            <item name="android:background">@drawable/next_arrow</item>
            <item name="android:elevation">4dp</item>
    </style>

    <!-- Gallery Button Style -->
    <style name="GalleryButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/gallery_button_background</item>
        <item name="android:padding">8dp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="RoundedImageStyle" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">35%</item>
    </style>

    <style name="RoundedDialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowMinWidthMajor">70%</item>
        <item name="android:windowMinWidthMinor">70%</item>
        <item name="android:windowNoTitle">true</item>
    </style>

</resources>
